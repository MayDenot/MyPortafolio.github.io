---
import IconGithub from "./IconGithub.astro";
import IconInstagram from "./IconInstagram.astro";
import IconGmail from "./IconGmail.astro";
import IconLinkedin from "./IconLinkedin.astro";
---

<footer class="w-full h-[200px]">
  <div id="container-footer" class="flex flex-col items-center justify-center pb-[15px]">
    <div class="footer-logo">
      <img class="w-[80px] transition duration-300 ease-in-out hover:scale-[1.2] cursor-pointer" 
      src="../assets/LogoPortafolio.webp" alt="Logo MD" />
    </div>
    <div class="footer-social-media">
      <div class="container-footer-social-media">
        <ul class="flex [&>li]:m-[5px] [&>li]:list-none [&>li>a>svg]:mb-[10px] md:[&>li>a>svg]:h-[40px] md:[&>li>a>svg]:w-[40px] 
          lg:[&>li>a>svg]:w-[30px] xl:[&>li>a>svg]:w-[50px]
          [&>li>a>svg]:duration-300 [&>li>a>svg]:transition [&>li>a>svg]:ease-in-out">
          <li>
            <a
              class="[&>svg]:hover:scale-[1.3]"
              href="https://github.com/MayDenot"
              target="_blank"
              aria-label="Ir a GitHub.com"
            >
              <IconGithub />
            </a>
          </li>
          <li>
            <a
              class="[&>svg]:hover:scale-[1.3]"
              href="https://www.instagram.com/maydenot/"
              target="_blank"
              aria-label="Ir a Instagram.com"
            >
              <IconInstagram />
            </a>
          </li>
          <li>
            <a
              class="[&>svg]:hover:scale-[1.3]"
              href="https://www.linkedin.com/in/mayra-denot-dev/"
              target="_blank"
              aria-label="Ir a Linkedin.com"
            >
              <IconLinkedin />
            </a>
          </li>
          <li>
            <a
              class="[&>svg]:hover:scale-[1.2]"
              href="mailto:mayra.denot@gmail.com"
              target="_blank"
              aria-label="Ir a Gmail.com"
            >
              <IconGmail />
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div id="footer-license" class="text-center text-[#fff] [&>h4]:pb-[10px] [&>h4]:text-[14px] md:[&>h4]:text-[16px] 
      lg:[&>h4]:text-[13px] xl:[&>h4]:text-[15px]">
      <h4>2023 Hecho con amor desde Argentina</h4>
      <h4>Mayra Andrea Denot</h4>
    </div>
  </div>
</footer>
